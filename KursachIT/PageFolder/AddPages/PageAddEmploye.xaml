<Page x:Class="KursachIT.PageFolder.AddPages.PageAddEmploye"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KursachIT.PageFolder.AddPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAddEmploye">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock x:Name="NameEmTb"/>
            <TextBlock x:Name="SurnameEmTb"/>
            <TextBlock x:Name="PathronymicEmTb"/>
            <TextBlock x:Name="EmailEmTb"/>
            <TextBlock x:Name="PhoneEmTb"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <ComboBox>
                <ComboBoxItem/>
                <ComboBoxItem/>
            </ComboBox>
            <TextBlock x:Name="LoginEmTb"/>
            <TextBlock x:Name="OfficeEmTb"/>
            
        </StackPanel>
    </Grid>
</Page>
